# enable async uart driver
CONFIG_UART_ASYNC_API=y

# enable SPI
CONFIG_SPI=y

#BLE enable
CONFIG_BT=y

#BLE device name
CONFIG_BT_DEVICE_NAME="BLE_GATT_test"

#BLE peripheral enable
CONFIG_BT_PERIPHERAL=y                                      

#BLE auto parameter update
CONFIG_BT_GAP_AUTO_UPDATE_CONN_PARAMS=y

# BLE PHY change enabled
CONFIG_BT_USER_PHY_UPDATE=y          

# BLE connection interval
CONFIG_BT_PERIPHERAL_PREF_MIN_INT=800
CONFIG_BT_PERIPHERAL_PREF_MAX_INT=800

# BLE connection latency
CONFIG_BT_PERIPHERAL_PREF_LATENCY=0

# BLE connection timeout
CONFIG_BT_PERIPHERAL_PREF_TIMEOUT=400

# BLE packet payload size change enabled
CONFIG_BT_USER_DATA_LEN_UPDATE=y
CONFIG_BT_CTLR_DATA_LENGTH_MAX=251
CONFIG_BT_BUF_ACL_RX_SIZE=251
